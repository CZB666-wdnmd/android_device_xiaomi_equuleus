<resources>
    <!-- The list of package IDs that are allowed to use aux cameras.
         NOTE: If this list is empty then all apps will be able to use aux cameras. -->
    <string-array name="config_cameraAuxPackageAllowList" translatable="false" />

    <!-- The list of package IDs that are allowed to skip camera high frame rate checks. -->
    <string-array name="config_cameraHFRPrivAppList" translatable="false" />

    <!-- Whether devices suports in-display fingerprint when screen is off -->
    <bool name="config_supportsScreenOffUdfps">true</bool>

    <!-- Whether device supports in-display fingerprint -->
    <bool name="config_supportsUdfps">true</bool>

    <!-- Whether device supports an alt. ambient display -->
    <bool name="config_alt_ambient_display">true</bool>

    <bool name="config_defaultColorEnhancement">false</bool>
    <bool name="config_defaultCABC">true</bool>
    <bool name="config_defaultAntiFlicker">true</bool>

    <!-- Path to fast charging status file to detect whether an oem fast charger is active -->
    <string name="config_oemFastChargerStatusPath" translatable="false">/sys/class/power_supply/usb/type</string>

    <!-- Expected value from fast charging status file  -->
    <string name="config_oemFastChargerStatusValue" translatable="false">USB_PD</string>

    <!-- Enable face auth only when swiping security view -->
    <bool name="config_faceAuthOnlyOnSecurityView">false</bool>
</resources>